---
 drivers/dma/bcm2835-dma.c | 62 +++++++++++++++++++++++++++++++++------
 1 file changed, 53 insertions(+), 9 deletions(-)

diff --git a/drivers/dma/bcm2835-dma.c b/drivers/dma/bcm2835-dma.c
index de6288447890..103f9ae2573c 100644
--- a/drivers/dma/bcm2835-dma.c
