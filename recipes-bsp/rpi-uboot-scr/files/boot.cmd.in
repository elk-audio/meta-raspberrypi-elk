saveenv

if env exists default_part;then printenv default_part; else setenv default_part 0; fi
if env exists fallback_part;then printenv fallback_part; else setenv fallback_part 1; fi
if env exists boot_count;then printenv boot_count; else setenv boot_count 0; fi
if env exists kimage;then printenv kimage; else setenv kimage 'Image0'; fi

setenv set_boot_args ' if test "${default_part}" = "0" ;then setenv bootargs 8250.nr_uarts=1 cma=256M vc_mem.mem_base=0x3ec00000 vc_mem.mem_size=0x40000000 console=ttyS0,115200 root=/dev/mmcblk0p2 rootfstype=ext4 rootwait; setenv kimage 'Image0'; else setenv bootargs 8250.nr_uarts=1 cma=256M vc_mem.mem_base=0x3ec00000 vc_mem.mem_size=0x40000000 console=ttyS0,115200 root=/dev/mmcblk0p3 rootfstype=ext4 rootwait; setenv kimage 'Image1'; fi'

setenv check_boot_count ' if test "${boot_count}" = "3" ;then echo "Switching to fallback image"; setexpr default_part ${default_part} ^ 1; setexpr fallback_part ${fallback_part} ^ 1; else echo "booting normally..."; fi'

run check_boot_count
setexpr boot_count ${boot_count} + 1
fdt addr ${fdt_addr} && fdt get value bootargs /chosen bootargs
run set_boot_args
fatload mmc 0:1 ${kernel_addr_r} ${kimage}
saveenv
booti ${kernel_addr_r} - ${fdt_addr}
